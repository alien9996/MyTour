<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TÊN VÀ ĐIỆN THOẠI"
        android:textSize="23dp"
        android:textColor="#3385ff"
        android:gravity="center"
        android:layout_marginTop="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edit_tex"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edt_full_name_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:textSize="16sp"
            android:hint="Tên đầy đủ"
            android:padding="12dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:background="#00000000" />

        <Button
            android:id="@+id/btn_delete_full_name"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/ic_close_black_24dp"
            android:visibility="gone"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edit_tex"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edt_phone_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:textSize="16sp"
            android:hint="Số điện thoại"
            android:padding="12dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:background="#00000000"
            android:phoneNumber="true"
            />

        <Button
            android:id="@+id/btn_delete_phone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/ic_close_black_24dp"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_note_register"
        android:textColor="#262626"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>
    <Button
        android:id="@+id/btn_next_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Tiếp"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:background="@drawable/custom_bottom_register_no_background"
        android:textColor="#0099ff"
        android:padding="12dp"
        />
</LinearLayout>