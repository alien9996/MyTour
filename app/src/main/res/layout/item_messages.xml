<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    >
    <RelativeLayout
        android:id="@+id/relative_layout_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avt_frient_message"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/avatar"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/txt_name_friend_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_avt_frient_message"
            android:text="Hoàng Dược Sư"
            android:textColor="#000"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txt_time_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:text="10:40 AM - 22/6"
            android:textSize="11dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="10dp"
             />

        <TextView
            android:id="@+id/txt_content_massage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name_friend_message"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_avt_frient_message"
            android:text="Đã thêm 1 bình luận về bài viết của bạn!"
            android:textSize="12dp"
            android:textColor="#4d4d4d"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>