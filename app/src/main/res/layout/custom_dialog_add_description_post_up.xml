<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#FFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title_dialog_add_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Thêm mô tả"
        android:textColor="#262626"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt_description_post_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edit_tex"
        android:hint="Mô tả về bài viết"
        android:padding="8dp"
        android:textColor="#262626"
        android:textSize="14sp"
        android:lines="4"
        android:gravity="left|top"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Hoàn thành"
            android:textColor="#303030" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Hủy"
            android:textColor="#3385ff" />

    </LinearLayout>


</LinearLayout>