<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#FFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title_message_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Chọn chế độ bài đăng"
        android:textColor="#262626"
        android:textSize="18sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp">
        <RadioButton
            android:id="@+id/radio_btn_post_type_public"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Công khai"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/radio_btn_post_type_protected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người được gắn thẻ xem"/>
        <RadioButton
            android:id="@+id/radio_btn_post_type_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chỉ mình tôi được xem"
            android:enabled="true"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Xong"
            android:textColor="#303030"
            />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Hủy"
            android:textColor="#3385ff" />

    </LinearLayout>


</LinearLayout>