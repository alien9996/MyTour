<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="#FFF">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/txt_title_post_item_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Đà Lạt mùa lá rụng đầy quyến rũ và thơ mộng (Trải nghiệm)"
            android:textColor="#262626"
            android:textSize="15sp"
            android:textStyle="bold"

            />
        <ImageView
            android:id="@+id/img_post_item_home"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:src="@drawable/hinh_b"
            android:layout_below="@+id/txt_title_post_item_home"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/txt_quote_post_item_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_post_item_home"
            android:layout_below="@+id/txt_title_post_item_home"
            android:text="@string/quote_conten_post_item_home"
            android:layout_marginLeft="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_post_item_home"
            android:layout_below="@+id/txt_quote_post_item_home"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_name_user_post_item_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Tui La Ai"
                android:textColor="#262626" />

            <TextView
                android:id="@+id/txt_count_view_item_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.120 xem"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>