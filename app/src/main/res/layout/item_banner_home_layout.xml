<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    android:layout_marginBottom="5dp"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_banner_item"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:id="@+id/img_linear_banner"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_title_banner_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nha Trang Mộng Mơ"
                android:textColor="#FFF"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/txt_count_like_banner_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/like_white_icon"
                android:layout_marginLeft="10dp"
                android:text="10.699 người thích"
                android:textColor="#FFF"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/txt_distance_banner_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:layout_marginLeft="10dp"
                android:text="990.4 Km"
                android:textColor="#FFF"
                android:textSize="12dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="40dp">
                <TextView
                    android:id="@+id/txt_price_new_banner_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$330"
                    android:textColor="#FFF"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txt_price_old_banner_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:layout_toRightOf="@id/txt_price_new_banner_item"
                    android:text="$550"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentBottom="true"
                    />

                <Button
                    android:id="@+id/btn_detail_banner_item"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:background="#9900cc"
                    android:text="Chi tiết"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>


</android.support.v7.widget.CardView>