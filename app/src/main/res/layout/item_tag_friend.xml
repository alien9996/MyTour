<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:descendantFocusability="blocksDescendants">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avt_frient_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/txt_name_friend_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_avt_frient_search"
            android:text="Hoàng Dược Sư"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_address_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name_friend_search"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_avt_frient_search"
            android:text="Du Lễ, Kiến Thụy,Hải Phòng"
            android:textSize="12dp"
            android:textColor="#4d4d4d"/>
        <Button
            android:id="@+id/btn_confirm_friend"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:text="Xác nhận"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            android:textColor="#3385ff"
            android:visibility="gone"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>